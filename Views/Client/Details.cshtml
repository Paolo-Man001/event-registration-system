@model EventRegistrationSystem.ViewModels.ClientDetailsViewModel
@{
    ViewBag.Title = "Client Details";
}

<h2>Client Details</h2>
<div>
    <div class="btn-group" role="group" aria-label="...">
        <a type="button" class="btn btn-primary btn-sm" href="/Client/Index">
            <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
            Client List
        </a>
        <a type="button" class="btn btn-success btn-sm" href="/Client/Edit/@Model.Client.ID">
            Edit Client
            <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
        </a>
    </div>
    <hr />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Client.FullName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.FullName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Client.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Client.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Client.Phone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.Phone)
        </dd>

    </dl>
    <hr />
    @if (Model.Events.Count() <= 0)
    {
        <div class="well well-lg">
            <p class="text-center text-warning">
                @Model.Client.FullName has No Registered Events.
            </p>
        </div>
    }
    else
    {
        <div>
            <div class="">
                <h4 class="text-primary">
                    @Model.Client.FullName - Registered Events
                </h4>
            </div>
            <table class="table">
                <tr class="info">
                    <th>Events</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Ticket Price</th>
                </tr>
                @foreach (var item in Model.Events)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.EventName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Location)
                        </td>

                        <td>
                            @Html.DisplayFor(model => item.TicketPrice)
                        </td>
                    </tr>
                }
            </table>
        </div>
    }

</div>

