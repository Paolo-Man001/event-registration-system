@model IEnumerable<EventRegistrationSystem.Models.Client>

@{
    ViewBag.Title = "Client Index";
}

<div class="row" style="margin-top:50px; padding:10px;">
    <div class="col-xs-6 col-md-4">
        <h2 style="margin-top:0;">Client List</h2>
    </div>

    <div class="col-xs-6 col-md-4">
        <form class="form-inline" style="margin-top:0;">
            <div class="form-group">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search Client Name" name="clientSearchTerm" style="width: 500px;">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                        <a class="btn btn-default" type="button" href="/Client/Index">
                            <i class="glyphicon glyphicon-refresh"></i>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="col-xs-6 col-md-4">
        <a class="pull-right btn btn-success btn-sm" href="/Client/Create" style="margin-top:0;">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            New Client
        </a>
    </div>
</div>
<hr />

<table class="table table-hover">
    <tr class="info">
        <th style="background-color:#fcf8e3 !important;">
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="bg-warning">
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <div class="btn-group pull-right" role="group" aria-label="...">
                    <a type="button" class="btn btn-warning btn-sm" href="/Client/Edit/@item.ID" style="width:56.69px">Edit</a>
                    <a type="button" class="btn btn-primary btn-sm" href="/Client/Details/@item.ID">Details</a>
                    <a type="button" class="btn btn-danger btn-sm" href="/Client/Delete/@item.ID">Delete</a>
                </div>
            </td>
        </tr>
    }

</table>
